<div class="ourservice-details">
  <%= render @ourservice %>

  <strong class="created-by"> Created by <%= @ourservice.user.email %> </strong>
</div>
<%  if  current_user %>
<div class="actions">
  <%= link_to "Edit this page", edit_ourservice_path(@ourservice), class: "btn" %> |
  <%= link_to "Back to ourservices", ourservices_path, class: "btn" %>

  <%= button_to "Delete this page", @ourservice, method: :delete, class: "btn btn--danger" %>
</div>
<% end %>
